#!/bin/env bash

# default terminal
DEF_TERM="alacritty --config-file=$HOME/.dwm/alacritty/alacritty.yml"

# default editor
DEF_EDITOR="vim"

# colors and font
BG="#080F1C"
FG="#c7c8c8"
ALT_BG="#8b8c8c"
FONT="Source Code Pro Medium:size=12"

# list of configs
declare -a options=(
"Feh (Wallpaper Background) - $HOME/.dwm/.fehbg"
"Picom - $HOME/.dwm/picom.conf"
"Vim - $HOME/.vimrc"
"dwm - /opt/axyl-dwm/config.def.h"
"dwmblocks - /opt/axyl-dwmblocks/blocks.def.h"
"dmenu - /opt/axyl-dmenu/config.def.h"
"Autostart - $HOME/.dwm/autostart.sh"
"Fish - $HOME/.config/fish/config.fish"
)

# creates the menu
choice=$(printf '%s\n' "${options[@]}" | sort -u | dmenu -c -i -l 10 -fn "$FONT" -p 'Edit Config:' -nb "$BG" -nf "$FG" -sb "$ALT_BG" -sf "$FG")

# opens the selected config file with vim
# exits otherwise
if [ "$choice" ]; then
    cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
    $DEF_TERM -e $DEF_EDITOR "$cfg"

else
    echo "Exiting..."; exit 1
fi


